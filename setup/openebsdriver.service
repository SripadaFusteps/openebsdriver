[Unit]
Description=openebsdriver
Before=docker.service
After=network.target openebsdriver.socket
Requires=openebsdriver.socket docker.service

[Service]
EnvironmentFile=/etc/openebsdriver/openebsdriver.env
ExecStart=/usr/lib/docker/openebsdriver --user ${openebs_API_USER} --password ${openebs_API_PASSWORD} --api ${openebs_API_URL} --registry ${openebs_REGISTRY}


[Install]
WantedBy=multi-user.target
